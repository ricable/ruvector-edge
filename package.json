{
  "name": "@ruvector/edge",
  "version": "2.1.0",
  "description": "ELEX Edge AI Agent Swarm - Edge-first distributed AI system with 593 specialized self-learning agents for Ericsson RAN optimization",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./knowledge": {
      "import": "./dist/layers/knowledge/index.js",
      "types": "./dist/layers/knowledge/index.d.ts"
    },
    "./intelligence": {
      "import": "./dist/layers/intelligence/index.js",
      "types": "./dist/layers/intelligence/index.d.ts"
    },
    "./optimization": {
      "import": "./dist/layers/optimization/index.js",
      "types": "./dist/layers/optimization/index.d.ts"
    },
    "./coordination": {
      "import": "./dist/layers/coordination/index.js",
      "types": "./dist/layers/coordination/index.d.ts"
    },
    "./runtime": {
      "import": "./dist/layers/runtime/index.js",
      "types": "./dist/layers/runtime/index.d.ts"
    },
    "./security": {
      "import": "./dist/security/index.js",
      "types": "./dist/security/index.d.ts"
    }
  },
  "files": [
    "dist",
    "wasm"
  ],
  "scripts": {
    "build": "bun run tsc -p tsconfig.json",
    "build:wasm": "bun run build:wasm:agent && bun run build:wasm:hnsw && echo 'WASM build completed'",
    "build:wasm:agent": "wasm-pack build --target web ./wasm/agent || echo 'Note: wasm-opt failed but WASM was generated'",
    "build:wasm:hnsw": "wasm-pack build --target web ./wasm/hnsw || echo 'Note: wasm-opt failed but WASM was generated'",
    "dev": "bun --watch run tsc -w",
    "test": "bun test",
    "test:vitest": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "demo:node": "bun run src/wasm/demo-node.ts",
    "demo:benchmark": "bun run src/wasm/demo-node.ts --benchmark --json",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "edge-ai",
    "distributed-agents",
    "ran-optimization",
    "ericsson",
    "wasm",
    "q-learning",
    "hnsw",
    "vector-search",
    "federated-learning",
    "swarm-intelligence"
  ],
  "author": "RuVector Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruvector/edge.git"
  },
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.1.0"
  },
  "dependencies": {
    "@claude-flow/embeddings": "^3.0.0-alpha.1",
    "@claude-flow/hooks": "^3.0.0-alpha.1",
    "@claude-flow/memory": "^3.0.0-alpha.1",
    "@claude-flow/neural": "^3.0.0-alpha.1",
    "@claude-flow/performance": "^3.0.0-alpha.1",
    "@claude-flow/shared": "^3.0.0-alpha.1",
    "@claude-flow/swarm": "^3.0.0-alpha.1",
    "@noble/ciphers": "^0.5.0",
    "@noble/curves": "^1.4.0",
    "@noble/ed25519": "^2.1.0",
    "@noble/hashes": "^1.4.0",
    "@ruvector/agentic-integration": "^1.0.0",
    "@ruvector/burst-scaling": "^1.0.0",
    "gun": "^0.2020.1240",
    "hnswlib-wasm": "^0.8.0",
    "lz4js": "^0.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0",
    "wasm-pack": "^0.12.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}