  "subcategory": "Intra-Band Contiguous",
  "accessTechnology": "LTE",
  "specialization": "Aggregation of contiguous carriers within the same frequency band for doubled bandwidth",
  "description": "Enables aggregation of adjacent carriers within the same band, typically combining two 10MHz or 20MHz carriers into a single larger carrier",
  "qLearning": {
    "alpha": 0.1,
    "gamma": 0.9,
    "epsilon": 0.3,
    "epsilonDecay": 0.995,
    "epsilonMin": 0.05,
    "learningRateStrategy": "adaptive",
    "rewardDiscounting": "temporal"
  },
  "stateMachine": {
    "coldStartThreshold": 100,
    "healthWarningThreshold": 0.7,
    "healthCriticalThreshold": 0.5,
    "recoveryThreshold": 0.8,
    "maxConsecutiveFailures": 5,
    "observationWindowMs": 5000,
    "degradedActions": ["prune_q_table", "increase_exploration", "federated_sync"]
  },
  "capabilities": [
    "ParameterConfiguration",
    "Troubleshooting",
    "Optimization",
    "Activation",
    "Deactivation",
