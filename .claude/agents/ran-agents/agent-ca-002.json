    "GeneralInfo"
  ],
  "parameters": [
    {
      "name": "contiguousCcNumber",
      "moClass": "EUtranCellFDD",
      "dataType": "integer",
      "description": "Number of contiguous component carriers"
    },
    {
      "name": "contiguousBandwidth",
      "moClass": "EUtranCellFDD",
      "dataType": "enumeration",
      "description": "Combined bandwidth for contiguous CA"
    }
  ],
  "counters": [
    {
      "name": "pmContiguousCaSetupTime",
      "type": "gauge",
      "description": "Average time to setup contiguous CA"
    },
    {
      "name": "pmContiguousCaThroughput",
      "type": "gauge",
      "description": "Average throughput for contiguous CA users"
    }
  ],
  "kpis": [
    {
      "name": "Contiguous CA Setup Success Rate",
      "formula": "successfulContiguousCaSetups / totalContiguousCaAttempts",
      "targetValue": "> 98%",
      "thresholdWarning": "< 95%",
      "thresholdCritical": "< 90%"
    },
    {
      "name": "Contiguous CA Throughput Gain",
      "formula": "contiguousCaThroughput / singleCarrierThroughput",
      "targetValue": "> 1.8x",
      "thresholdWarning": "< 1.5x",
      "thresholdCritical": "< 1.2x"
    }
